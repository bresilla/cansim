<MyLayout>
    capacity_slider_value: capacity_slider_value
    quality_slider_value: quality_slider_value
    BoxLayout:
        id: main
        orientation: "vertical"
        size: root.width, root.height
        BoxLayout:
            id: top
            orientation: "horizontal"
            BoxLayout:
                id: capacity
                size_hint: 0.3, 1
                orientation: "vertical"
                Label:
                    id: capacity_slider_label
                    size_hint: 1, 0.1
                    text: "Capacity"
                    font_size: 32
                Slider:
                    min: 1
                    max: 100
                    step: 1
                    orientation: "vertical"
                    sensitivity: "handle"
                    on_value: root.slide_capacity(*args)
                Label:
                    id: capacity_slider_value
                    size_hint: 1, 0.1
                    text: "0"
                    font_size: 32
            BoxLayout:
                id: quality
                size_hint: 0.3, 1
                orientation: "vertical"
                Label:
                    id: quality_slider_label
                    size_hint: 1, 0.1
                    text: "Quality"
                    font_size: 32
                Slider:
                    min: 1
                    max: 100
                    step: 1
                    orientation: "vertical"
                    sensitivity: "handle"
                    on_value: root.slide_quality(*args)
                Label:
                    id: quality_slider_value
                    size_hint: 1, 0.1
                    text: "0"
                    font_size: 32
